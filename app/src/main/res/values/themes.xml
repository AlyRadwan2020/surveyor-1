<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RapidTheme" parent="RapidTheme.Base"/>
    <style name="RapidTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_lightest</item>
    </style>

    <style name="LoginTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/primary_lightest</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>


</resources>